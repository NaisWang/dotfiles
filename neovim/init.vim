syntax on
set expandtab shiftwidth=2 tabstop=2
set ai
set number
set hlsearch
highlight Comment ctermfg=green

set mouse=a
let g:python_recommended_style = 0
filetype indent on
set clipboard+=unnamed
set laststatus=0

let mapleader=" "
map <LEADER>l <C-W>l
map <LEADER>k <C-W>k
map <LEADER>j <C-W>j
map <LEADER>h <C-W>h
